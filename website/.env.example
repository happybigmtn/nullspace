# Frontend dev config
VITE_IDENTITY=replace-me
VITE_URL=http://localhost:8080

# Convex self-hosted (for CLI; do not commit real keys)
CONVEX_SELF_HOSTED_URL=http://127.0.0.1:3210
CONVEX_SELF_HOSTED_ADMIN_KEY=replace-me

# Auth.js service
# Optional: set to http://localhost:3000 for same-origin auth in dev.
VITE_AUTH_URL=http://localhost:4000
# Vite dev proxy target for auth endpoints when using same-origin URLs.
VITE_AUTH_PROXY_URL=http://localhost:4000
# Enable simulator WebAuthn dev passkeys (default off).
VITE_ENABLE_SIMULATOR_PASSKEYS=0

# Stripe billing (client-side inputs for checkout)
# Preferred: comma-separated tier:priceId pairs (ex: member:price_1,pro:price_2)
VITE_STRIPE_TIERS=member:price_1Si8MZ3nipX4Oc41nPRODqdn
# Back-compat single tier
VITE_STRIPE_PRICE_ID=price_1Si8MZ3nipX4Oc41nPRODqdn
VITE_STRIPE_TIER=member

# EVM bridge config (Phase 2)
VITE_EVM_CHAIN_ID=11155111
VITE_EVM_LOCKBOX_ADDRESS=0x0000000000000000000000000000000000000000
VITE_EVM_RNG_ADDRESS=0x0000000000000000000000000000000000000000
