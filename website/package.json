{
  "name": "website",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "npm run copy:data && npm run build:wasm && vite",
    "build": "npm run copy:data && npm run build:wasm && vite build",
    "build:tmp": "npm run copy:data && npm run build:wasm && vite build --outDir /tmp/nullsociety-dist",
    "preview": "npm run build && vite preview",
    "convex:dev": "convex dev",
    "build:wasm": "cd wasm && wasm-pack build --target web --out-dir pkg",
    "build:wasm-test": "cd wasm && wasm-pack build --target web --out-dir pkg-test -- --features testing",
    "copy:data": "mkdir -p public && cp ../economy_log.json public/ || echo 'No economy log found, skipping copy'",
    "clean:dist": "rm -rf dist",
    "clean:wasm": "rm -rf wasm/pkg",
    "clean:artifacts": "npm run clean:dist && npm run clean:wasm",
    "pretest": "cd .. && cargo build --release --bin nullspace-simulator",
    "pretest:integration": "cd .. && cargo build --release --bin nullspace-simulator",
    "test": "npm run test:unit && npm run test:integration",
    "test:integration": "npm run build:wasm-test && node --import tsx --test tests/integration/*.test.js",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:coverage": "npm run test:unit:coverage",
    "test:unit:watch": "vitest",
    "smoke": "node scripts/smoke-playwright.mjs",
    "e2e:auth": "node scripts/e2e-auth-billing.mjs",
    "e2e:layout": "node scripts/layout-smoke.mjs",
    "latency-test": "node scripts/latency-test.mjs",
    "latency-test:headed": "HEADED=1 node scripts/latency-test.mjs",
    "qa:bet-suite": "node scripts/qa-bet-suite.mjs",
    "visual:capture": "node scripts/visual-regression.mjs capture",
    "visual:compare": "node scripts/visual-regression.mjs compare",
    "visual:update": "VISUAL_UPDATE=1 node scripts/visual-regression.mjs capture",
    "build:analyze": "ANALYZE=true npm run build",
    "bundle:check": "node scripts/check-bundle-sizes.mjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "description": "",
  "dependencies": {
    "@nullspace/constants": "workspace:*",
    "@nullspace/design-tokens": "workspace:*",
    "@nullspace/game-state": "workspace:*",
    "@nullspace/protocol": "workspace:*",
    "@nullspace/types": "workspace:*",
    "@react-spring/web": "^10.0.3",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@use-gesture/react": "^10.3.1",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "convex": "^1.31.2",
    "lucide-react": "^0.562.0",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.10.1",
    "recharts": "^3.5.1",
    "simplex-noise": "^4.0.3",
    "stripe": "^14.0.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "4.0.16",
    "fake-indexeddb": "^6.2.5",
    "jsdom": "^26.1.0",
    "node-fetch": "^3.3.2",
    "pixelmatch": "^6.0.0",
    "playwright-core": "^1.49.0",
    "pngjs": "^7.0.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "vitest": "^4.0.16",
    "ws": "^8.18.3"
  }
}
