{
  "name": "@nullspace/protocol",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "react-native": "./dist/index.js",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./encode": {
      "types": "./dist/encode.d.ts",
      "react-native": "./dist/encode.js",
      "import": "./dist/encode.js",
      "require": "./dist/encode.js"
    },
    "./decode": {
      "types": "./dist/decode.d.ts",
      "react-native": "./dist/decode.js",
      "import": "./dist/decode.js",
      "require": "./dist/decode.js"
    },
    "./websocket": {
      "types": "./dist/websocket.d.ts",
      "react-native": "./dist/websocket.js",
      "import": "./dist/websocket.js",
      "require": "./dist/websocket.js"
    },
    "./validation": {
      "types": "./dist/validation.d.ts",
      "react-native": "./dist/validation.js",
      "import": "./dist/validation.js",
      "require": "./dist/validation.js"
    },
    "./mobile": {
      "types": "./dist/mobile.d.ts",
      "react-native": "./dist/mobile.js",
      "import": "./dist/mobile.js",
      "require": "./dist/mobile.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@nullspace/constants": "workspace:*",
    "@nullspace/types": "workspace:*",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@nullspace/tsconfig": "workspace:*",
    "@vitest/coverage-v8": "^2.1.9",
    "fast-check": "^4.5.3",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  }
}
