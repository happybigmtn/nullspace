# Simulator Network Configuration
SIMULATOR_HOST=0.0.0.0
SIMULATOR_PORT=8080

# REQUIRED: Simulator Identity (P2P Node ID)
# Generate with: openssl rand -base64 32
# CRITICAL: Must be unique per simulator instance
SIMULATOR_IDENTITY=33AdbXIzj1L3HhHpFaREoB6g5g3K/e1JE/761ijZkQY=

# Simulator Arguments (database, redis, persistence)
# CRITICAL: Replace database and redis URLs with your actual endpoints
SIMULATOR_ARGS=--explorer-persistence-url=postgres://user:pass@REPLACE_WITH_YOUR_DB_HOST/nullspace --fanout-redis-url=redis://REPLACE_WITH_YOUR_REDIS_HOST:6379 --cache-redis-url=redis://REPLACE_WITH_YOUR_REDIS_HOST:6379 --cache-redis-prefix=nullspace:explorer:prod: --summary-persistence-path=/var/lib/nullspace/summaries.sqlite --summary-persistence-max-blocks=50000

# CORS Configuration
# CRITICAL: Replace with your actual app origins before deployment
ALLOWED_HTTP_ORIGINS=https://REPLACE_WITH_YOUR_APP_ORIGIN
ALLOWED_WS_ORIGINS=https://REPLACE_WITH_YOUR_APP_ORIGIN
ALLOW_HTTP_NO_ORIGIN=0
ALLOW_WS_NO_ORIGIN=0

# Rate Limiting
RATE_LIMIT_HTTP_PER_SEC=5000
RATE_LIMIT_HTTP_BURST=10000
RATE_LIMIT_SUBMIT_PER_MIN=120000
RATE_LIMIT_SUBMIT_BURST=20000
RATE_LIMIT_WS_CONNECTIONS=30000
RATE_LIMIT_WS_CONNECTIONS_PER_IP=500

# WebSocket Configuration
WS_SEND_TIMEOUT_MS=2000

# REQUIRED: Metrics Endpoint Authentication Token
# Generate with: openssl rand -base64 32
# CRITICAL: Must be replaced before deployment - leaving empty disables auth protection
METRICS_AUTH_TOKEN=SLNmUmUHvNzc+wUagF9aOPGaQBb1DNp8jSG75+Cq5uI=

# Logging
RUST_LOG=info

# Global Table Presence Configuration
