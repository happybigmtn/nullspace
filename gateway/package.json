{
  "name": "@nullspace/gateway",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:integration": "RUN_INTEGRATION=true vitest run tests/integration/integration.test.ts",
    "test:integration:all": "RUN_INTEGRATION=true vitest run tests/integration/all-bet-types.test.ts",
    "test:stress": "RUN_STRESS=true vitest run tests/stress/websocket-stress.test.ts",
    "test:stress:1k": "STRESS_CONNECTIONS=1000 RUN_STRESS=true vitest run tests/stress/websocket-stress.test.ts",
    "test:stress:ci": "STRESS_CONNECTIONS=100 RUN_STRESS=true vitest run tests/stress/websocket-stress.test.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@noble/curves": "^1.4.0",
    "@noble/hashes": "^1.4.0",
    "@nullspace/constants": "workspace:*",
    "@nullspace/protocol": "workspace:*",
    "@nullspace/types": "workspace:*",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.52.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.52.0",
    "@opentelemetry/sdk-node": "^0.52.0",
    "ws": "^8.17.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/ws": "^8.5.10",
    "@vitest/coverage-v8": "^1.6.1",
    "tsx": "^4.15.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
