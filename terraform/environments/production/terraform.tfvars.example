# Production environment configuration
# Copy to terraform.tfvars and fill in values
# IMPORTANT: Never commit terraform.tfvars - it contains secrets

# Hetzner Cloud API token (or set TF_VAR_hcloud_token env var)
# hcloud_token = "your-hcloud-api-token"

# SSH key name in Hetzner Cloud console
ssh_key_name = "nullspace-deploy"

# Admin IPs allowed SSH access (restrict to VPN/bastion IPs only)
admin_ssh_ips = [
  "10.0.0.100/32", # Bastion host
]

# Prometheus server IPs
prometheus_ips = []

# Scaling (production defaults)
gateway_count   = 4 # 4x CPX31 for ~20k concurrent connections
validator_count = 4 # 4 nodes for production BFT (f=1)

# Storage (production retention)
database_volume_gb      = 200 # Postgres with WAL archiving
convex_volume_gb        = 100 # Convex data
observability_volume_gb = 500 # 30-day metrics + 7-day logs retention

# TLS certificate ID from Hetzner
# certificate_id = 12345

# Components
enable_observability = true
enable_convex        = true
